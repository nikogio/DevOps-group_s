extends layout

block content
    h2 Sign In
    .signin-form
        form(action='/api/signin' method='POST')
            dl
                dt
                | Username:
                dd
                input(type='text' name='username' size='30' id = 'username')
                dt
                | Password:
                dd
                input(type='password' name='password' size='30' id = 'password')
                .actions
                    input(type='submit' value='Sign In')

